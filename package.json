{
  "name": "elementary",
  "version": "1.0.0",
  "description": "An aggressive reset style sheet for modern web browsers",
  "keywords": [
    "css",
    "css3",
    "reset",
    "stylesheet"
  ],
  "author": "Kieran Potts <hello@kieranpotts.com> (https://www.kieranpotts.com/)",
  "license": "MIT",
  "homepage": "https://www.elementarycss.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kieranpotts/elementary.git"
  },
  "bugs": {
    "url": "https://github.com/kieranpotts/elementary/issues"
  },
  "engines": {
    "node": ">=4.5.0"
  },
  "dependencies": {
    "autoprefixer": "^7.1.1",
    "chokidar-cli": "^1.2.0",
    "node-sass-chokidar": "^0.0.1",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.0.0"
  },
  "devDependencies": {},
  "scripts": {
    "build-task:scss-compile": "node-sass-chokidar --source-map true src/ -o build/",
    "build-task:autoprefixer": "postcss build/*.css --use autoprefixer -d build/",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar 'src/**/*.scss' -c 'npm run sass:build'",
    "dev": "npm-run-all -p sass:*"
  },
  "main": "index.js"
}
